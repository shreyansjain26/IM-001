<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/back_color"
    tools:context="com.example.shreyans.myfirstapp.MainActivity">
    <Button
        android:layout_width="500px"
        android:layout_height="100px"
        android:background="@color/button_color"
        android:text="@string/button_text"
        android:textColor="@color/back_color"
        android:textSize="50px"
        android:onClick="clickButton"
        android:id="@+id/button"
        android:layout_below="@+id/word"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="500px"
        android:layout_height="100px"
        android:layout_marginBottom="20px"
        android:background="@color/textField"
        android:textColor="@color/black"
        android:id="@+id/word"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:layout_width="500px"
        android:layout_height="100px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search for IMDB rating"
        android:textAlignment="center"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/word"
        android:layout_alignStart="@+id/word" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:textAlignment="center"
        android:textSize="80px"
        android:textColor="@color/colorAccent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/response"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
